@model IEnumerable<gerenciamento_de_campeonato.Models.Liga>

@{
    ViewBag.Title = "Index";
}

<h2>Ligas</h2>

<br>

<p>
    <a href="@Url.Action("Create")" class="btn btn-sm btn-success" aria-label="Criar novo item" title="Criar Novo">
        <i class="fas fa-plus"></i> Criar Nova Liga
    </a>
</p>

<br>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativa)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.Id })" class="text-warning" title="Editar">
                <i class="fas fa-edit"></i>
            </a>
            <a href="@Url.Action("Details", new { id = item.Id })" class="text-info" title="Detalhes">
                <i class="fas fa-info-circle"></i>
            </a>
            <a href="@Url.Action("Delete", new { id = item.Id })" class="text-danger" title="Excluir">
                <i class="fas fa-trash"></i>
            </a>
        </td>
    </tr>
}

</table>
